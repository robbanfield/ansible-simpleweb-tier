# {{ ansible_managed }}
global
    log         127.0.0.1 local2 

    # Not use chroot for this demo
    #chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon


defaults
    mode                    {{ mode }}
    log                     global
    option                  httplog
    option                  dontlognull
    option http-server-close
    option forwardfor       except 127.0.0.0/8
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

backend app
    {% for host in groups['tag_ansible_group_lbservers'] %}
listen {{ daemonname }} {{ hostvars[host].ec2_private_ip_address }}:{{ listenport }}
    {% endfor %}
    balance     {{ balance }}
    {% for host in groups['tag_ansible_group_webservers'] %}
    server      {{ hostvars[host].ec2_id }} {{ hostvars[host].ec2_ip_address }}:{{ httpd_port }}
    {% endfor %}